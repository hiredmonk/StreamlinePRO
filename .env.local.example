# App
NEXT_PUBLIC_APP_URL=http://127.0.0.1:3000
NEXT_PUBLIC_DEFAULT_TIMEZONE=America/Los_Angeles

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY
SUPABASE_SERVICE_ROLE_KEY=YOUR_SUPABASE_SERVICE_ROLE_KEY
SUPABASE_JWT_SECRET=YOUR_SUPABASE_JWT_SECRET

# Auth (Google OAuth via Supabase)
SUPABASE_AUTH_GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID
SUPABASE_AUTH_GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET

# Storage
SUPABASE_STORAGE_BUCKET_ATTACHMENTS=task-attachments

# Notifications/Email
EMAIL_PROVIDER_API_KEY=YOUR_EMAIL_PROVIDER_API_KEY
EMAIL_FROM_ADDRESS=noreply@your-domain.com

# Optional Observability/Logging
SENTRY_DSN=
LOG_LEVEL=info

# Optional helper for local bootstrap without real keys
# SKIP_ENV_VALIDATION=1
